<% content_for :sidebar do -%> 
<div class='sidebar ui-corner-all' style='width:150px'> 
		<h4 id='service'>帐户</h4>
	 	<ul >  
			<%= topnav_tab('修改密码', :url => password_user_path(@user) ,:section => 'password') %>  
	 	</ul> 
</div>                                      
<% end -%>

<h2>修改密码</h2>
<%= error_messages_for :user %>

  <% form_for :user, @user , :url => change_password_user_path, :html => {:method=>:put} do |f| -%>

<p>
	<label for="email">现密码: </label><br />
	<%= f.password_field :current_password, :class=> 'nomal' %>
</p>
<p>
	<label for="password">新密码: </label><br />
	<%= f.password_field :password, :class=> 'nomal' %> 
</p>
<p>
	<label for="password">确认密码:  </label><br />
	<%= f.password_field :password_confirmation, :class => 'nomal' %>
	</p>
<p>
	<%= submit_tag '重新设置'%>
	</p>

<% end -%>