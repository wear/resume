	</div> 
	<% end %>
   <fieldset style='width:220px;background:#FFF;'>
	<legend>马上开始</legend>   
   	<% form_for :user, :url => users_path do |f| -%>
		<%= render :partial => '/users/form',:locals => {:f => f} %>
	<p><%= submit_tag '确定' %></p> 
	<% end %>
	</fieldset>   
  </div>                                           
  <div class='span-19 prepend-2' style='margin-top:20px;'>

