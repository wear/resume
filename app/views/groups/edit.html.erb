	<li class='ui-tabs-selected'><%=link_to '课堂设置','#tabs-content'%></li>
	<li><%=link_to '成员设置',members_group_path(@group)%></li>
	<li><%=link_to '权限管理','#'%></li>
	<li><%=link_to '邀请成员','#'%></li>
	<% end -%>
<% end -%>

