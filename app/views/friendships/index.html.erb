<h1>关系圈</h1>
<h2>我加的人</h2> 
<table border="0" cellspacing="5" cellpadding="5">
	<tr><th>名称</th></tr>  
	<% @user.friendships.each do |friendship| -%> 
	<tr><td><%=link_to friendship.friend.login,friendship.friend %></td>
		<td><%= friendship.status %></td>
		<td><%=link_to '评价对方',new_user_recommendation_path(@user,:receiver_id => friendship.friend)%>
	</tr>  
	<% end -%>    
</table>
	
</table>