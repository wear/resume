<h2>发件箱</h2>
<table>
	<tr>
		<th>删除?</th>
		<th>标题</th>
		<th>收件人</th>
		<th>发件</th>
	</tr>
	<% if @messages.size == 0 %>
		<tr>
			<td colspan="4">
				暂无消息
			</td>
		</tr>
	<% else %>
		<% for message in @messages %>
			<tr>
				<td><%= check_box_tag "delete[]", message.id %></td>
				<td><%= link_to h(message.subject), user_message_path(@user, message) %></td>
  			<td><%= link_to h(message.recipient.login), user_path(@user) %></td>
			  <td><%=h message.created_at.to_s(:date_time24) %></td>
			</tr>
		<% end %>
		<tr>
			<td colspan="4">
				<%= submit_tag "删除" %>
			</td>
		</tr>
 	<% end %>
</table>