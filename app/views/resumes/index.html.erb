<% content_for :head do -%>
	<%= javascript_include_tag 'jquery.progressbar.min' %>
<% end %>
<% content_for :tabs do -%>
 	<li><%=link_to('全部简历','#tabs-content') %></li>
<% end -%>
<dl>
<% completeness ||= resume_completeness(@resume) %>
<% percent = completeness[:score] %>    
<script type="text/javascript" charset="utf-8">
	$(document).ready(function() {
		$("#{@resume.id}").progressBar(<%=percent%>,{ barImage: '/images/progressbg_green.gif'});
	});
</script>

	<dd id='activity-item'>    
	   <%=h name_for_resume(@resume) %> <%=link_to '预览/定制', @resume,:target => '_blank',:class => 'ag'%> <%=link_to '投送', new_resume_poster_path(@resume),:class => 'ag'%> <%=link_to '获得推荐', ask_user_recommendations_path(current_user),:class => 'ag'%> <%=link_to 'PDF下载',APP_URL + public_resume_pdf_path(@resume.salt),:target => '_blank',:class => 'ag'%>
	 <p>
		<span class="progressBar" id="<%=@resume.id%>">&nbsp;</span>
		</p>     
		<%= link_to '编辑', edit_resume_path(@resume),:class => 'ag' %>
	   
		<%= link_to '删除', @resume, :confirm => '你确定嘛?', :method => :delete,:class=> 'edit' %> 
	<br /> 
	<span style='color:#999999'><%= @resume.created_at%></span>
	 </dd>  
	
    <hr />

</dl>

